    <script>
        $(document).ready(function(){
            $("input[id=price]").maskMoney({allowNegative: false, thousands:'.', decimal:',', affixesStay: true});

            $('#formUpdatePlan').validate({
                rules: {
                    name: {
                        remote: { 
