    <script>
        $(document).ready(function(){
            $('#formCreateTable').validate({
                rules: {
                    name: {
                        remote: { 
                            type: "post",
                            url: "<?php echo baseUrl; ?>formas-pagamento/valor-existente",
                        }
                    },
                },
                messages: {
                    name: {
                        remote: "Forma de Pagamento j√° cadastrada"
                    },
                },
                submitHandler: function(){
                    let form_data = new FormData();

                    form_data.append('name', $("#name").val());    
                    form_data.append('target', '<?php echo $this->getTarget(); ?>');
                    
                    $("#baseLoader").show();
                    $("#btnSubmit").attr('disabled', true);

                    $.ajax({
                        type: "POST",
                        url: "<?php echo baseUrl; ?>formas-pagamento/processa-cadastro",
                        cache: false,
                        contentType: false,
                        processData: false,
                        data: form_data,
                        dataType: 'json',
                        async: true
                    }).done(function(data) {
                        showAlert(data.type, data.title, data.msg, data.pos);
                        $("#baseLoader").hide();
                        $("#btnSubmit").attr('disabled', false);
                        $('#formCreateTable').trigger("reset");
                    }).fail(function() {
                        showInternalErrorAlert(); 
                        $("#baseLoader").hide();   
                        $("#btnSubmit").attr('disabled', false);
                    }); 

                    return false;
                }
            });
        });
    </script>
