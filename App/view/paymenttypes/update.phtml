    <script>
        $(document).ready(function(){
            $('#formUpdateTable').validate({
                rules: {
                    name: {
                        remote: { 
                            type: "post",
                            url: "<?php echo baseUrl; ?>formas-pagamento/valor-existente",
                            data: {uuid: '<?php echo $_POST['uuid']; ?>'}
                        }
                    },
                },
                messages: {
                    name: {
                        remote: "Forma de Pagamento j√° cadastrada"
                    },
