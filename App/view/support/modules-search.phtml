<form method="post" name="formAddSearchKeyword" id="formAddSearchKeyword">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <span>Buscar <?php echo $title; ?></span>
                <select class="form-control" name="keyword" id="keyword" required style="width: 100%;">
                    <option value="">Clique para Pesquisar</option>
                </select>
            </div>
        </div>
        <div class="col-12">
            <input type="hidden" name="support_id" value="<?php echo $_POST['support_id']; ?>">
            <input type="hidden" name="target" value="<?php echo $this->getTarget(); ?>">
            <button type="submit"  class="btn btn-success btn-lg btnRadiusLg" style="width: 100%" id="btnSubmitSearchKeyword">
                <span class="fa fa-plus pr-1"></span>
                ATRIBUIR
            </button>
        </div>
    </div>
