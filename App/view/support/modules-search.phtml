<script>
    $(document).ready(function() {
        $('#keyword').select2({
            ajax: {
                type: 'POST',
                url: '<?php echo $searchRoute; ?>',
                dataType: 'json',
                processResults: function (data) {
                    return {
                        results: data
                    };
                }
              }
        });

        $('#formAddSearchKeyword').validate({
            submitHandler: async function( form ){
                let dados = $( form ).serialize();
                let formTarget = '<?php echo $target; ?>';

                $("#modalMidLoader").show();

                await $.ajax({                
                    type: "POST",
                    url: "<?php echo baseUrl . 'chamados/processa-' . $target; ?>",
                    data: dados,
                    dataType: 'json',
                    async: true
                }).done(function(data) {
                    showAlert(data.type, data.title, data.msg, data.pos);
                    $("#modalMidLoader").hide();   
                   
                    if (formTarget === 'responsavel') {
                        loadModulesTable('responsibles');
                    }
                }).fail(function() {
                    showInternalErrorAlert(); 
                    $("#modalMidLoader").hide();   
                }); 
 
                return false;
            }
        });
    });

    function showLoader() {
        $("#modalMidLoader").show();   
    }
</script>