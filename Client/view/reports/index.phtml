<script>
    $(document).ready(function() {
        $('#formExecuteReport').validate({
            submitHandler: async function( form ){
                let dados = $( form ).serialize();

                $("#baseLoader").show();
                $("#btnSubmit").show('disabled', true);

                await $.ajax({
                    type: "POST",
                    url: "<?php echo baseUrl; ?>cliente/relatorios/gerar",
                    data: dados,
                    async: true
                }).done(function(data) {
                    $("#baseLoader").fadeOut();
                    $("#btnSubmit").attr('disabled', false);
                    $("#results").html(data);
                }).fail(function() {
                    showInternalErrorAlert();
                    $("#baseLoader").fadeOut();
                    $("#btnSubmit").attr('disabled', false);
                });

                return false;
            }
        });
    });
</script>